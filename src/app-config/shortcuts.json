{
    "global": [
        {
            "label": "Play/Pause",
            "accelerator": "Space",
            "event": "shortcut-play-pause"
        },
        {
            "label": "Stop",
            "accelerator": "S",
            "event": "shortcut-stop"
        },
        {
            "label": "Rewind",
            "accelerator": "CommandOrControl+Left",
            "event": "shortcut-rewind"
        },
        {
            "label": "Fast Forward",
            "accelerator": "CommandOrControl+Right",
            "event": "shortcut-fast-forward"
        },
        {
            "label": "Seek to start",
            "accelerator": "Alt+Left",
            "event": "shortcut-seek-start"
        },
        {
            "label": "Seek to end",
            "accelerator": "Alt+Right",
            "event": "shortcut-seek-end"
        },
        {
            "type": "separator"
        },
        {
            "label": "Increase Tempo",
            "accelerator": "CommandOrControl+Up",
            "event": "shortcut-increase-tempo"
        },
        {
            "label": "Decrease Tempo",
            "accelerator": "CommandOrControl+Down",
            "event": "shortcut-decrease-tempo"
        },
        {
            "label": "Increase Pitch",
            "accelerator": "CommandOrControl+=",
            "event": "shortcut-increase-pitch"
        },
        {
            "label": "Decrease Pitch",
            "accelerator": "CommandOrControl+-",
            "event": "shortcut-decrease-pitch"
        },
        {
            "type": "separator"
        },
        {
            "label": "Import Media",
            "accelerator": "CommandOrControl+M",
            "event": "shortcut-import-media"
        },
        {
            "label": "Save Project",
            "accelerator": "CommandOrControl+S",
            "event": "shortcut-save-project"
        },
        {
            "label": "Open Project",
            "accelerator": "CommandOrControl+O",
            "event": "shortcut-open-project"
        }
    ],
    "local": [
        {
            "accelerator": "C",
            "event": "shortcut-toggle-controls-bar"
        },
        {
            "accelerator": "W",
            "event": "shortcut-toggle-waveform-bar"
        },
        {
            "accelerator": "A",
            "event": "shortcut-toggle-analysis-bar"
        },
        {
            "accelerator": "Enter",
            "event": "shortcut-play-pause"
        }
    ]
}